{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "#bootstrap",
    "title": "Bootstrap Schema for Glencoden App",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "_lastUpdated": {
            "type": "string"
        },
        "initialState": {
            "type": "object"
        },
        "global": {
            "$ref": "#global"
        },
        "components": {
            "$ref": "#components"
        }
    },
    "definitions": {
        "global": {
            "$id": "#global",
            "type": "object",
            "properties": {
                "fontTypes": {
                    "type": "array",
                    "items": {
                        "$ref": "#fontType"
                    }
                },
                "fontSizes": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                },
                "pageSize": {
                    "type": "array",
                    "items": {
                        "$ref": "#singlePageSize"
                    }
                },
                "maxPageWidth": {
                    "type": "number",
                    "default": 2500
                },
                "colors": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "bgColor": {
                    "type": "number",
                    "default": 0
                },
                "overlayColor": {
                    "type": "number",
                    "default": 4
                },
                "themeColor": {
                    "type": "number",
                    "default": 0
                },
                "fadeInTime": {
                    "type": "number",
                    "default": 0.2
                },
                "loadingTimeout": {
                    "type": "number",
                    "default": 10
                },
                "usePortraitImages": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "fontType": {
            "$id": "#fontType",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "default": "Arial"
                },
                "url": {
                    "type": "string"
                }
            }
        },
        "singlePageSize": {
            "$id": "#singlePageSize",
            "type": "object",
            "properties": {
                "width": {
                    "type": "number"
                },
                "height": {
                    "type": "number"
                }
            }
        },
        "components": {
            "$id": "#components",
            "type": "array",
            "items": {
                "$ref": "#single_component"
            }
        },
        "single_component": {
            "$id": "#single_component",
            "type": "object",
            "properties": {
                "component": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "initialState": {
                    "type": "object"
                },
                "css": {
                    "type": "object"
                },
                "scale": {
                    "type": "number"
                },
                "fromGlobal": {
                    "type": "array",
                    "items": {
                        "type": [ "string", "object" ]
                    }
                },
                "children": {
                    "type": "array",
                    "items": {
                        "$ref": "#single_component"
                    }
                }
            }
        }
    }
}