{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "#bootstrap",
    "title": "Bootstrap Schema for Glencoden App",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "fontTypes": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "app": {
            "$ref": "#app"
        }
    },
    "definitions": {
        "app": {
            "$id": "#app",
            "type": "object",
            "properties": {
                "initialState": {
                    "type": "object"
                },
                "style": {
                    "$ref": "#style"
                },
                "global": {
                    "$ref": "#global"
                },
                "components": {
                    "$ref": "#components"
                }
            }
        },
        "style": {
            "$id": "#style",
            "type": "object",
            "properties": {
                "themeColor": {
                    "type": "string",
                    "default": "#000000"
                },
                "backgroundColor": {
                    "type": "string",
                    "default": "#000000"
                },
                "overlayColor": {
                    "type": "string",
                    "default": "#FFFFFF"
                },
                "lightFontColor": {
                    "type": "string",
                    "default": "#FFFFFF"
                },
                "mediumFontColor": {
                    "type": "string",
                    "default": "#F9F9F9"
                },
                "darkFontColor": {
                    "type": "string",
                    "default": "#000000"
                }
            }
        },
        "global": {
            "$id": "#global",
            "type": "object",
            "properties": {
                "fadeInTime": {
                    "type": "number",
                    "default": 0.2
                },
                "loadingTimeout": {
                    "type": "number",
                    "default": 10
                },
                "usePortraitImages": {
                    "type": "boolean",
                    "default": true
                },
                "maxPortraitWidth": {
                    "type": "number",
                    "default": 500
                }
            }
        },
        "components": {
            "$id": "#components",
            "type": "array",
            "items": {
                "$ref": "#single_component"
            }
        },
        "single_component": {
            "$id": "#single_component",
            "type": "object",
            "properties": {
                "component": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "initialState": {
                    "type": "object",
                    "default": {}
                },
                "style": {
                    "type": "object",
                    "default": {}
                },
                "children": {
                    "type": "array",
                    "items": {
                        "$ref": "#single_component"
                    },
                    "default": []
                }
            }
        }
    }
}