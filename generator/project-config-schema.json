{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "#bootstrap",
    "title": "Bootstrap Schema for Glencoden App",
    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "initialState": {
            "type": "object"
        },
        "global": {
            "$ref": "#global"
        },
        "components": {
            "$ref": "#components"
        }
    },
    "definitions": {
        "fontType": {
            "$id": "#fontType",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "default": "Arial"
                },
                "url": {
                    "type": "string"
                }
            }
        },
        "global": {
            "$id": "#global",
            "type": "object",
            "properties": {
                "colors": {
                    "$ref": "#colors"
                },
                "fontTypes": {
                    "type": "array",
                    "items": {
                        "$ref": "#fontType"
                    }
                },
                "fontSizes": {
                    "$ref": "#fontSizes"
                },
                "pageContentSize": {
                    "$ref": "#pageContentSize"
                },
                "maxPageWidth": {
                    "type": "number",
                    "default": 2500
                },
                "fadeInTime": {
                    "type": "number",
                    "default": 0.2
                },
                "loadingTimeout": {
                    "type": "number",
                    "default": 10
                },
                "usePortraitImages": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "colors": {
            "$id": "#colors",
            "type": "object",
            "properties": {
                "theme": {
                    "type": "string",
                    "default": "#000000"
                },
                "background": {
                    "type": "string",
                    "default": "#000000"
                },
                "overlay": {
                    "type": "string",
                    "default": "#FFFFFF"
                },
                "light": {
                    "type": "string",
                    "default": "#FFFFFF"
                },
                "medium": {
                    "type": "string",
                    "default": "#F9F9F9"
                },
                "dark": {
                    "type": "string",
                    "default": "#000000"
                }
            }
        },
        "fontSizes": {
            "$id": "#fontSizes",
            "type": "object",
            "properties": {
                "h1": {
                    "type": "number",
                    "default": 54
                },
                "h2": {
                    "type": "number",
                    "default": 32
                },
                "h3": {
                    "type": "number",
                    "default": 24
                },
                "body": {
                    "type": "number",
                    "default": 16
                }
            }
        },
        "pageContentSize": {
            "$id": "#pageContentSize",
            "type": "object",
            "properties": {
                "width": {
                    "type": "number",
                    "default": 80
                },
                "widthMobile": {
                    "type": "number",
                    "default": 90
                },
                "height": {
                    "type": "number",
                    "default": 85
                },
                "heightMobile": {
                    "type": "number",
                    "default": 90
                }
            }
        },
        "components": {
            "$id": "#components",
            "type": "array",
            "items": {
                "$ref": "#single_component"
            }
        },
        "single_component": {
            "$id": "#single_component",
            "type": "object",
            "properties": {
                "component": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "initialState": {
                    "type": "object"
                },
                "style": {
                    "type": "object"
                },
                "sizing": {
                    "type": "object"
                },
                "css": {
                    "type": "object"
                },
                "children": {
                    "type": "array",
                    "items": {
                        "$ref": "#single_component"
                    }
                }
            }
        }
    }
}