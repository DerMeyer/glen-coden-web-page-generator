{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "#IconNavigation",
    "title": "IconNavigation",
    "type": "object",
    "properties": {
        "stretch": {
            "type": "number",
            "default": 1
        },
        "verticalOnPortrait": {
            "type": "boolean",
            "default": true
        },
        "color": {
            "type": "string",
            "default": "light"
        },
        "items": {
            "type": "array",
            "items": {
                "$ref": "#icon"
            }
        }
    },
    "definitions": {
        "item": {
            "$id": "#icon",
            "type": "object",
            "properties": {
                "svgName": {
                    "type": "string"
                },
                "imageUrl": {
                    "type": "string"
                },
                "targetUrl": {
                    "type": "string"
                },
                "internal": {
                    "type": "boolean"
                }
            }
        }
    }
}