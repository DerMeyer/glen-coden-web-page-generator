{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "#Headline",
    "title": "Headline",
    "type": "object",
    "properties": {
        "size": {
            "type": "string",
            "default": "big"
        },
        "mobileSizeBy": {
            "type": "object",
            "default": {
                "portrait": 0.8,
                "landscape": 1
            }
        },
        "fontTypeIndex": {
            "type": "number",
            "default": 0
        },
        "color": {
            "type": "string",
            "default": "light"
        },
        "text": {
            "type": "object",
            "default": {
                "en": "Your Headline"
            }
        }
    }
}