{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "#ZoomBackground",
    "title": "ZoomBackground",
    "type": "object",
    "properties": {
        "image": {
            "type": "string",
            "default": "background-image.jpg"
        },
        "autoZoom": {
            "type": "boolean",
            "default": false
        },
        "zoomFactor": {
            "type": "object",
            "properties": {
                "manual": {
                    "type": "number",
                    "default": 4
                },
                "auto": {
                    "type": "number",
                    "default": 12
                }
            }
        },
        "zoomTime": {
            "type": "object",
            "properties": {
                "manual": {
                    "type": "number",
                    "default": 0.5
                },
                "auto": {
                    "type": "number",
                    "default": 10
                }
            }
        }
    }
}